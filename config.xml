<?xml version='1.0' encoding='utf-8'?>
<widget id="com.BOZHON.WMS" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WMS</name>
    <description>
        博众市购件仓库管理系统
    </description>
    <author email="harris.zhang@boozhong.com" href="http://www.bozhon.com">
        信息化团队
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/ldpi-36.png" />
        <icon density="mdpi" src="res/icon/android/mdpi-48.png" />
        <icon density="hdpi" src="res/icon/android/hdpi-72.png" />
        <icon density="xhdpi" src="res/icon/android/xhdpi-96.png" />
        <icon density="xxhdpi" src="res/icon/android/xxhdpi-144.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-app-version" spec="^0.1.9" />
    <plugin name="cordova-plugin-file-opener2" spec="^2.0.19" />
    <plugin name="cordova-plugin-bluetooth-serial" spec="^0.4.7" />
    <plugin name="cordova-plugin-file" spec="^3.0.0" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.4.0" />
    <preference name="xwalkVersion" value="14+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^1.3.1" />
    <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />
    <plugin name="cordova-plugin-x-toast" spec="^2.5.2" />
    <engine name="android" spec="^5.1.1" />
</widget>
